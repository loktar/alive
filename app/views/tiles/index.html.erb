<button id="auto_toggle">Start</button>

<button id="create_world">Create World</button>

<div id="info">
  <h1>Info</h1>
  <ol>
    <li>Total life: <span id="total_life"></span></li>
    <li>Herbivores: <span id="herbivore_count"></span></li>
  </ol>

  <div id="graph"></div>
</div>

<div id="tiles"></div>

<%= javascript_tag do %>
  $(function() {
    var tiles = new Tiles('#tiles');
    new TilesRefresher('#auto_toggle', tiles);

    $('#create_world').click(function(){
      $.ajax({
        url:'/worlds',
        type:'post',
      });
    });
  });
<% end %>